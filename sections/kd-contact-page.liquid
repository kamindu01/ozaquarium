<style>

  .kd-contact-area-wrapper {
    padding-top: 50px;
  }
  .kd-contact-area-wrapper h3 {
    font-size: 36px;
  }

  .kd-contact-area-wrapper h4 {
    font-size: 28px;
  }

  .kd-contact-area-wrapper .form-group {
    margin-bottom: 20px;
  }

  .kd-contact-area-wrapper .form-control {
    height: 40px;
  }

  .kd-button {
    padding: 15px 35px;
    background-color: #d9121f;
    color: white;
    border: none;
  }

  .main-page-title {
    display: none !important;
  }
</style>

<div class="kd-contact-area-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h3>Contact information</h3>
        <br>
        <div class="conact-info-inner">
          <h4>Address</h4>
          <div>
            <address>4 Archer Rd, Truganina VIC 3029</address>
          </div>
          <div>
            <a href="mailto:Email: sales@ozaquariumdistributors.com">Email: sales@ozaquariumdistributors.com</a>
          </div>
          <div>
            <p>Monday to Friday: 9am-6pm</p>
            <p>please email us if you have a query outside of business hours</p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <h3 class="mb-4">Contact form</h3>
        <div class="kd-contact-form-wrapper">
          {% form 'contact' %}
            {{ form.errors | default_errors }}

            <div class="form-group">
              <label for="first-name">First name</label>
              <input
                class="form-control"
                type="text"
                name="contact[first_name]"
                id="first-name" />
            </div>

            <div class="form-group">
              <label for="last-name">Last name</label>
              <input
                class="form-control"
                type="text"
                name="contact[last_name]"
                id="last-name" />
            </div>

            <div class="form-group">
              <label for="phone">Phone</label>
              <input
                class="form-control"
                type="tel"
                name="contact[phone]"
                id="phone" />
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <input
                class="form-control"
                type="email"
                name="contact[email]"
                id="email" />
            </div>

            <div class="form-group mb-4">
              <label for="message">Message</label>
              <textarea
                class="form-control"
                name="contact[body]"
                id="message"></textarea>
            </div>

            <div class="form-group">
              <input
                class="kd-button"
                type="submit"
                value="Create" />
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Kd Contact Page",
    "settings": [
      {
        "type": "text",
        "id": "address",
        "label": "Address"
      }, {
        "type": "text",
        "id": "email_address",
        "label": "Email Address"
      }, {
        "type": "text",
        "id": "working_hours",
        "label": "Working Hours"
      }
    ],
    "presets": [
      {
        "name": "Kd Contact Page"
      }
    ]
  }
{% endschema %}