<style>
  .single-product-inner {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    background: white;
    box-shadow: 0 0 5px #00000024;
    margin-bottom: 20px;
    padding: 8px;
    max-width: 100%;
  }

  .single-product-inner .prod-title img {
    max-width: 200px;
  }
</style>

<div class="quick-order-section-wrapper">
  <h2 class="quick-order-title">{{ section.settings.Kd_quick_order_title }}</h2>
  <div class="pagination-wrapper">
    {% paginate collections.all.products by 30 %}
      {% for product in collections.all.products %}
        <div class="single-product">
          <div class="single-product-inner">
            <div class="prod-img">
              <img src="{{product.featured_image | img_url: 'small'}}" alt="">
            </div>
            <div class="prod-title">
              <h2>{{ product.title }}</h2>
            </div>
            <div class="prod-button">
              {% if customer %}
                {% if product.options.size > 0 -%}
                  <button>Show Options</button>
                {% else %}
                  <button>Purchase</button>
                {%- endif %}
              {% endif %}
            </div>
          </div>
          {% if product.options.size > 0 -%}
            <div class="single-product-options hidden">
              {% for option in product.options -%}
                - {{ option }}
              {%- endfor %}
            </div>
          {%- endif %}
        </div>
      {% endfor %}
      {{ paginate | default_pagination }}
    {% endpaginate %}
  </div>
</div>

{% schema %}
  {
    "name": "Kd Quick Order",
    "settings": [
      {
        "type": "text",
        "id": "Kd_quick_order_title",
        "label": "Title"
      }
    ],
    "presets": [
      {
        "name": "Kd Quick Order"
      }
    ]
  }
{% endschema %}