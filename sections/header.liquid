<header class="kd-header">
  <div class="header-top-area">
    <div class="container">
      <div class="text-right">
        <a href="mailto:sales@ozaquariumdistributors.com">Need Help? sales@ozaquariumdistributors.com</a>
      </div>
    </div>
  </div>

  <div class="header-middle-area container">
    <div class="row align-items-center">
      <div class="col-4">
        <a href="{{shop.url}}"><img src="{{ section.settings.logoimg | img_url: 'master' }}" /></a>
      </div>
      <div class="col-8">
        <div class="header-midle-right">
          <form action="/search" class="kd-inline-search">
            <input
              type="search"
              name="q"
              placeholder="Search" />
            <button type="submit">
              <i class="fa fa-search"></i>
            </button>
          </form>

          <ul class="header-icons">
            <li>
              <a href="{{ shop.url }}/cart">
                <i class="fa fa-shopping-cart"></i>
              </a>
            </li>
            <li>
              <a href="{{ shop.url }}/account">
                <i class="fa fa-user"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="header-bottom-area">
    <div class="container">
      <div class="text-center">
        {%- if section.settings.menu != blank -%}
          <nav
            class="header__inline-menu"
            data-navigation
            role="navigation">
            {% render 'halo-navigation-list' 
             , listClass: 'list-menu list-menu--inline text-center' %}
          </nav>
        {%- endif -%}
      </div>

    </div>
  </div>

</header>



{% schema %}
  {
    "name": "t:sections.header.name",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.header.settings.header__8.content"
      }, {
        "type": "link_list",
        "id": "menu",
        "label": "t:sections.header.settings.menu.label__1",
        "default": "main-menu"
      }, {
        "type": "image_picker",
        "id": "logoimg",
        "label": "Logo Image"
      }
    ]
  }
{% endschema %}